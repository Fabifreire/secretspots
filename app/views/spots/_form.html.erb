<div class="container">
	<%= simple_form_for (@spot) do |f| %>
		<%= f.error_notification %>

		<% if @spot.errors.any? %>
			<h4> Please fix your errors </h4>
			<ul>
				<% @spot.errors.full_messages.each do |message| %>
					<li> <%= message %></li>
				<% end %>
			</ul>
		<% end %>

		<div class="form-inputs">
			<%= f.input :name %>
			<%= f.input :address %>
            <%= f.input :category, collection: @categories, label: false, prompt: "filter by category" %>
			<%= f.input :description %>
			<%= f.input :photos, as: :file, input_html: { multiple: true } %>

		</div>

		<div class="form-actions">
			<%= f.button :submit %>
		</div>
	<% end %>
</div>
