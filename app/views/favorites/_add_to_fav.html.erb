
<% unless current_user.blank?%>
    <% if @favorites.find_by(spot: spot) %>
        <%= link_to spot_favorites_path(spot), method: :delete, class: 'favorite', data: { confirm: 'Remove from favorites?'} do%>
          <i class="fas fa-heart"></i> 
        <%end%>
      <%else%>
        <%= link_to spot_favorites_path(spot), method: :post, class: 'favorite' do%>
          <i class="far fa-heart"></i>
        <% end%>
    <% end%>
<%end%>


